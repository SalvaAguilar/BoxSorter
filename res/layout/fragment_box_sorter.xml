<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.silverhillapps.boxsorter.BoxSorterActivity$PlaceholderFragment" >

    <com.silverhillapps.boxsorter.views.BoxCanvasView
        android:id="@+id/boxCanvasView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" 
        app:origin="2">
    
    </com.silverhillapps.boxsorter.views.BoxCanvasView>

    <Button
        android:id="@+id/suck_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/suck_in_button" />

    <Button
        android:id="@+id/add_shape_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/suck_in_button"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/add_shape_button" />

</RelativeLayout>
